{
    "compilerOptions": {
      "target": "ES2015",
      "module": "ESNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "checkJs": true,
      "allowJs": true,
      "emitDeclarationOnly": true,
      "declaration": true,
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "$schema": "https://json.schemastore.org/tsconfig"
  }